<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Период:" />
                <DatePicker fx:id="workerFromDate" promptText="От" />
                <DatePicker fx:id="workerToDate" promptText="До" />
                <Button onAction="#applyDates" text="Показать результаты" />
            </children>
        </HBox>
        <TableView fx:id="workerTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="workerIdColumn" text="ID сотрудника" />
                <TableColumn fx:id="workerNameColumn" text="Имя сотрудника" />
                <TableColumn fx:id="workerLoginColumn" text="Логин сотрудника" />
                <TableColumn fx:id="workerRoleColumn" text="Роль сотрудника" />
                <TableColumn fx:id="workerTotalSoldColumn" text="Общая стоимость продаж" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>