<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox fx:id="parent" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morzevichka.manageyourstore.controllers.center.purchase.PurchaseConfirmationController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Подтверждение покупки" />

    <HBox spacing="10">
        <Label text="Пользователь:" />
        <Label fx:id="usernameLabel" text="Имя пользователя" />
    </HBox>

    <HBox spacing="10">
        <Label text="Итоговая стоимость:" />
        <Label fx:id="totalPriceLabel" text="0.00 ₽" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Доступные бонусы:" />
        <Label fx:id="bonusLabel" text="0" />
        <Button onAction="#applyBonus" fx:id="applyBonusButton" text="Списать бонусы" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Способ оплаты:" />
        <ComboBox fx:id="paymentMethodComboBox" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Карта"/>
                    <String fx:value="Наличные"/>
                    <String fx:value="СБП"/>
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#makePurchase" fx:id="confirmButton" text="Подтвердить" />
        <Button onAction="#cancel" fx:id="cancelButton" text="Отмена" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
