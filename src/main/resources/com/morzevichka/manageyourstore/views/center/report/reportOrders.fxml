<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Период:" />
                <DatePicker fx:id="ordersFromDate" promptText="От" />
                <DatePicker fx:id="ordersToDate" promptText="До" />
                <Button onAction="#applyDate" text="Показать заказы" />
            </children>
        </HBox>
        <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="ID заказа" />
                <TableColumn fx:id="orderIdWorker" text="ID Продавца" />
                <TableColumn fx:id="customerColumn" text="Клиент" />
                <TableColumn fx:id="orderDateColumn" text="Дата" />
                <TableColumn fx:id="orderTotalColumn" text="Сумма" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>