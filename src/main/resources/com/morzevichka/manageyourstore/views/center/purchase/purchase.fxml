<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.7" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morzevichka.manageyourstore.controllers.center.purchase.PurchaseController">
  <items>
    <AnchorPane>
         <children>
            <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="searchTextField" promptText="Название или баркод" HBox.hgrow="SOMETIMES" />
                        <Button mnemonicParsing="false" onAction="#clearSearch" text="Очистить" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <ListView fx:id="productsListView" VBox.vgrow="ALWAYS" style="-fx-background-color: #ffffff;"/>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
    </AnchorPane>
    <AnchorPane>
         <children>
            <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox>
                     <children>
                        <Button mnemonicParsing="false" visible="false" HBox.hgrow="ALWAYS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Чек">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#clearPurchaseList" text="Удалить" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <ListView fx:id="purchaseListView" VBox.vgrow="ALWAYS" style="-fx-background-color: #ffffff;">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </ListView>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="clientNumberTextField" promptText="Найти покупателя (номер телефона):" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#findClient" text="Найти" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <Button maxWidth="1.7976931348623157E308" onAction="#purchase" prefHeight="80.0" style="-fx-background-color: rgb(0,0,220, 0.6);">
                     <graphic>
                        <StackPane>
                           <children>
                              <Label text="ИТОГО:" StackPane.alignment="CENTER_LEFT">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                              <Label fx:id="totalPriceTextField" text="00.00" StackPane.alignment="CENTER_RIGHT">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                                 <padding>
                                    <Insets right="30.0" />
                                 </padding>
                              </Label>
                           </children>
                        </StackPane>
                     </graphic>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
    </AnchorPane>
  </items>
</SplitPane>
