<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10.0">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Фильтр по дате:" />
                <DatePicker fx:id="soldFromDate" promptText="От" />
                <DatePicker fx:id="soldToDate" promptText="До" />
                <Button onAction="#applyDates" text="Приминить" />
            </children>
        </HBox>
        <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="productNameColumn" text="Название товара" />
                <TableColumn fx:id="quantityColumn" text="Количество" />
                <TableColumn fx:id="totalPriceColumn" text="Сумма продажи" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>