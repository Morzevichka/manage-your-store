   <children>
      <Label layoutX="132.0" layoutY="69.0" text="Введите свои данные для входа">
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>
      <GridPane layoutX="132.0" layoutY="115.0" prefHeight="120.0" prefWidth="300.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.33331298828125" minWidth="10.0" prefWidth="79.33335367838542" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="236.66668701171875" minWidth="10.0" prefWidth="221.33331298828125" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Логин:" />
            <Label text="Пароль:" GridPane.rowIndex="1" />
