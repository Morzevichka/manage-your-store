            <Button fx:id="logInButton" mnemonicParsing="false" onAction="#logIn" prefWidth="80.0" text="Войти" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#close" prefWidth="80.0" text="Закрыть" />
         </children>
      </VBox>
      <Label fx:id="actionLabel" layoutX="131.0" layoutY="96.0" prefHeight="17.0" prefWidth="300.0" />
   </children>
